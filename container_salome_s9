Bootstrap: docker
From: debian:9

%files

sources.list /home
99edf /home
99edfproxy /home
locale.gen /home

%post

apt-get update && apt-get -y install build-essential wget

mkdir /local00
mkdir /scratch
chmod 755 /local00
chmod 755 /scratch

sed -i 's/ main/ main contrib non-free/' /etc/apt/sources.list

cat >> /etc/apt/sources.list << EOF
deb http://scibian.org/repo/ scibian8 main
deb http://dist.calibre.edf.fr/scibian9-applis-public scibian9 main
deb http://dist.calibre.edf.fr/scibian9 stretch main contrib non-free
deb http://dist.calibre.edf.fr/scibian9 stretch-updates main contrib non-free
deb http://dist.calibre.edf.fr/scibian9 stretch/updates main contrib non-free
deb http://dist.calibre.edf.fr/scibian9 scibian9 main contrib non-free
deb http://dist.calibre.edf.fr/scibian9 scibian9-edf main contrib non-free
EOF

wget https://scibian.org/repo/scibian-auto-keyring.pub -O- | apt-key add -

cat >> /etc/apt/preferences.d/00scibian << EOF
Package: *
Pin: release o=Scibian
Pin-Priority: 1001
EOF


apt-get update

apt-get -y install scibian-desktop

%post

apt-get -y install locales

cp /home/locale.gen /etc/
rm /home/locale.gen

%post

locale-gen

%post

apt-get -y install salome-prerequisites-9.3.0
apt-get -y install salome-prerequisites-9.4.0
